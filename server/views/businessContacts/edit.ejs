<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- content for Edit page -->
<main class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8"></div>
        <h1 class="mb-4"><%= title %> </h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField" class="mb-1">Name:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="nameTextField"
                    placeholder="Enter name"
                    name="name"
                    value="<%- contact.name %>"
                    required>
            </div>

            <div class="form-group">
                <label for="nameTextField" class="mb-1">Number:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="numberTextField"
                    placeholder="Enter number"
                    value="<%- contact.number %>" 
                    name="number" 
                    
                    required>
            </div>

            <div class="form-group">
                <label for="nameTextField" class="mb-1">Email:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="emailTextField"
                    placeholder="Enter email"
                    name="email" 
                    value="<%- contact.email %>"
                    required>
            </div>

            <button class="btn btn-warning mt-3" type="submit">Submit</button>
            <a href="/contact-list" class="btn btn-secondary mt-3">Cancel</a>
            <!-- Delete button -->
            <a href="/contact-list/delete/<%= contact._id %>" class="btn btn-danger mt-3 mx-2" role="button">Delete <%=contact.name%></a>
        </form>
</main>

